= simple_form_for(@post, :html => { :class => "form-horizontal" }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :body, input_html: { class: "tinymce", rows: 20 }
    = tinymce
    = f.input :published

  .form-actions
    = f.button :submit, class: "btn-primary"

